

<%- include('layouts/header.ejs') %>
<table class="table table-striped table-bordered table-hover">
    <thead class="">
        <tr class="text-center table-dark ">
            <th>id</th>
            <th>name</th>
            <th>description</th>
            <th>image</th>
            <th>action</th>
        </tr>
        <% product.forEach((item)=>{ %>
        <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td> 
    
            <td class="text-center">
                <% if(item.image){ %>
                    <img src="/uploads/<%= item.image %>" alt="image" class="img-thumbnail" style="width: 100%; max-width: 120px;">
                <% }else{ %>
                    <p>no image</p>
                <% } %>
            </td>
            <td class="text-center">
                <a href="/product/edit/<%= item.id %>" class="btn btn-warning">edit</a>
                <a href="/product/delete/<%= item.id %>" class="btn btn-danger">delete</a>
            </td>
        </tr>
        <% }) %>
        
    </thead>
</table>

<%- include('layouts/footer.ejs') %>
